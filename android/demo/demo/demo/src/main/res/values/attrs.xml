<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CityPickerView">
        <attr name="citypicker_title_background" format="color" /><!--标题背景颜色-->
        <attr name="citypicker_text_confirm_color" format="color" /><!--确认文字的颜色-->
        <attr name="citypicker_text_cancel_color" format="color" /><!--取消文字的颜色-->
        <attr name="citypicker_wheel_color" format="color" /><!--滚轮的颜色-->
        <attr name="citypicker_wheel_text_color" format="color" /><!--滚轮里面内容的文字颜色-->
        <attr name="citypicker_wheel_text_size" format="dimension" /><!--滚轮里面内容的文字大小-->
        <attr name="citypicker_title_text_size" format="dimension" /><!--标题的文字大小-->
        <attr name="citypicker_title_action_size" format="dimension" /><!--确认和取消的文字大小-->
    </declare-styleable>
    <declare-styleable name="SwipeItemLayout.Layout">
        <attr name="layout_itemType">
            <flag name="main" value="0x01" />
            <flag name="menu" value="0x02" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveProgressView">
        <attr name="radius" format="dimension" />
        <attr name="progress" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="waveColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="hideText" format="boolean" />
        <attr name="borderWidth" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="waveHeight" format="dimension" />

    </declare-styleable>


    <declare-styleable name="MoneyLayoutView">
        <attr name="moneyTextColor" format="reference|color" />
        <attr name="moneyText" format="reference|string" />
        <attr name="moneyHideText" format="boolean" />
        <attr name="moneyTextSize" format="dimension" />
        <attr name="moneyTextStyle" format="enum">
            <enum name="bold" value="1" />
            <enum name="normal" value="0" />
        </attr>
        <attr name="moneyHeight" format="dimension" />
        <attr name="moneyWidth" format="dimension" />
        <attr name="moneyColor" format="reference|color" />
    </declare-styleable>

</resources>