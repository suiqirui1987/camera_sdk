<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:selectableItemBackground">@null</item>
        <item name="dt_titlebar_back_arrow_src">@mipmap/public_back_black</item>
        <!--标题文字大小-->
        <item name="dt_titlebar_text_size">16sp</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="listpopstyle">
        <item name="android:popupBackground">@drawable/table_cloud_pop_background_round</item>
    </style>

    <style name="StyleSwitchButtonIOS">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="kswAnimationDuration">300</item>
        <item name="kswBackDrawable">@drawable/switch_ios_back_drawable</item>
        <item name="kswThumbDrawable">@drawable/switch_ios_thumb_selector</item>
        <item name="kswThumbWidth">@dimen/ksw_md_thumb_ripple_size</item>
        <item name="kswThumbHeight">@dimen/ksw_md_thumb_ripple_size</item>
        <item name="kswThumbMarginBottom">-8dp</item>
        <item name="kswThumbMarginLeft">-5dp</item>
        <item name="kswThumbMarginRight">-5dp</item>
        <item name="kswThumbMarginTop">-2.5dp</item>
        <item name="kswThumbRangeRatio">1.4</item>
    </style>


    <style name="StyleSwitchButtonIOS_Support">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="kswAnimationDuration">300</item>
        <item name="kswBackDrawable">@drawable/switch_ios_back_drawable_support</item>
        <item name="kswThumbDrawable">@drawable/switch_ios_thumb_selector</item>
        <item name="kswThumbWidth">@dimen/ksw_md_thumb_ripple_size</item>
        <item name="kswThumbHeight">@dimen/ksw_md_thumb_ripple_size</item>
        <item name="kswThumbMarginBottom">-8dp</item>
        <item name="kswThumbMarginLeft">-5dp</item>
        <item name="kswThumbMarginRight">-5dp</item>
        <item name="kswThumbMarginTop">-2.5dp</item>
        <item name="kswThumbRangeRatio">1.4</item>
    </style>


    <style name="accountInputTextStyle">
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:gravity">center_horizontal|start</item>
        <item name="android:textSize">@dimen/login_input_text_size</item>
    </style>



</resources>
